<h1>invitations</h1>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>E-mail</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each model as |invitation|}}
		
			<tr>
				<th>{{invitation.id}}</th>
				<td>{{invitation.email}}</td>
				<td>
					<button class="btn btn-sm btn-danger" {{action 'deleteInvitation' invitation }}>delete</button>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>

{{#if responseMessage}}
	<div class="alert alert-success">{{responseMessage}}</div>
{{/if}}